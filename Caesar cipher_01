k=int(input("enter anything :"))
text=input("enter text to encrypt :")
def caesar_cipher(text, k):
    return ''.join(chr((ord(char) - 65 + k) % 26 + 65) if char.isupper() else
                   chr((ord(char) - 97 + k) % 26 + 97) if char.islower() else char for char in text)
encrypt_text=caesar_cipher(text, k)
print(f"encrypted_text (shift={k}):",encrypt_text)
